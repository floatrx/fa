{
    "tabWidth": 4,
    "trailingComma": "es5",
    "printWidth": 140,
    "arrowParens": "always",
    "semi": true,
    "bracketSameLine": false,
    "bracketSpacing": true,
    "endOfLine": "lf",
    "jsxSingleQuote": false,
    "singleQuote": false,
    "plugins": ["prettier-plugin-tailwindcss"],
    "overrides": [
        {
            "files": ["*.{ts,tsx,js,jsx,mjs,cjs}"],
            "options": {
                "singleQuote": true,
                "tabWidth": 2
            }
        },
        {
            "files": ["*.{json,md}"],
            "options": {
                "tabWidth": 2
            }
        }
    ]
}
